<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_24r">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/svg_icon_close" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="24dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/_0c0c0f"
            android:textStyle="bold"
            android:text="Tips"/>

        <TextView
            android:id="@+id/prompt_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="你好，弹窗！"
            android:textColor="@color/_0c0c0f60"
            android:textSize="16sp" />


        <FrameLayout
            android:id="@+id/btn_one"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/selector_dialog_them_bg">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_one_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="取消"
                android:textColor="@color/_0c0c0f"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/btn_two"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:background="@drawable/dialog_btn_bg_1">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_two_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>